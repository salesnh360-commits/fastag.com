# Copy this file to .env.local and fill values. Never commit .env.local.

# --- Database (MySQL) ---
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=rootpass
MYSQL_DATABASE=ecomnh360web
# Enable if provider requires TLS (e.g., PlanetScale/Aurora with SSL)
MYSQL_SSL=false

# --- External Tickets API ---
# Base URL without trailing slash
# Prefer a dedicated API endpoint on the ticket service (e.g., /api/tickets)
TICKETS_API_URL=https://nh360-self.vercel.app/api/tickets

# Recommended: permanent API key via custom header (works with your cURL/PowerShell test)
TICKETS_CSRF_HEADER=x-api-key
TICKETS_CSRF_VALUE=18319b78dd6c2e1729644d81b8376cb699d0dc047146b6179c75b614ee79ad8c1db0a59f17a49865c6694e9ac78179cb

# Optional alternatives (leave empty if using x-api-key):
# TICKETS_API_TOKEN=
# TICKETS_BASIC_USER=
# TICKETS_BASIC_PASS=
# TICKETS_COOKIE=
# TICKETS_REFERER=

TICKETS_API_URL=https://nh360-self.vercel.app/api/tickets
TICKETS_API_KEY=18319b78dd6c2e1729644d81b8376cb699d0dc047146b6179c75b614ee79ad8c1db0a59f17a49865c6694e9ac78179cb

# --- Email (SMTP) for lead notifications ---
# If using Gmail, set SMTP_USER to full address and create an App Password for SMTP_PASS.
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM="NH360 FASTag <no-reply@nh360fastag.com>"
SALES_EMAIL=sales@nh360fastag.com

# --- Auth ---
# Secret for signing session tokens (JWT HMAC). Use a long random string.
AUTH_SECRET=change-me-32+chars
# Comma-separated admin emails. Registered users with these emails get role=admin
ADMIN_EMAILS=admin@nh360fastag.com

# --- WhatsApp notifications (choose provider) ---
# Provider: meta (WhatsApp Cloud API) or twilio
WHATSAPP_PROVIDER=meta

# Meta WhatsApp Cloud API (recommended)
# https://developers.facebook.com/docs/whatsapp/cloud-api
WHATSAPP_TOKEN=
WHATSAPP_PHONE_ID=
WHATSAPP_TEMPLATE=
WHATSAPP_TEMPLATE_LANG=en_US

# Twilio WhatsApp (alternative)
# https://www.twilio.com/docs/whatsapp
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Destination for notifications (E.164 format, country code included)
WHATSAPP_TO=+919999999999

# --- Shiprocket ---
# API: https://apiv2.shiprocket.in/v1/external
SHIPROCKET_EMAIL=
SHIPROCKET_PASSWORD=
SHIPROCKET_BASE_URL=https://apiv2.shiprocket.in/v1/external
# Name of pickup location configured in Shiprocket (Settings → Company → Pickup Locations)
SHIPROCKET_PICKUP_LOCATION=Primary

# --- ERP (nh360solutions.com) ---
# Base URL, e.g., https://nh360solutions.com/api
ERP_BASE_URL=
# Auth header configuration. If only ERP_API_KEY is set, defaults to Authorization: Bearer <key>
ERP_API_KEY=
# Optional: override header name (e.g., x-api-key) and/or scheme (bearer|basic)
ERP_AUTH_HEADER=
ERP_AUTH_SCHEME=
# Optional: endpoints (relative to base)
ERP_LEADS_ENDPOINT=/leads
ERP_ORDERS_ENDPOINT=/orders
ERP_ORDER_UPDATE_ENDPOINT=/orders/{orderId}/status

# --- Google Maps ---
# Optional: for shop import and geocoding. If not set, falls back to OpenStreetMap.
# Obtain from https://console.cloud.google.com/apis/credentials (enable Places API and Geocoding API)
GOOGLE_MAPS_API_KEY=
